pipeline {
    agent any
    tools {
        maven 'Maven 3' // Ensure it's installed in Jenkins
    }
    stages {
        stage('Checkout') {
            steps {
                 checkout scm
                // git 'git remote add origin https://github.com/Anikeshsmn26/BMC_SeleniumJava.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test -DsuiteXmlFile=testng.xml'
            }
        }
    }
}
    post {
        always {
            junit '**/target/surefire-reports/*.xml'
            archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
        }
    }
